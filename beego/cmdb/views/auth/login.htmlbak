<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <title>用户登录</title>

        <!-- Bootstrap core CSS -->
        <link href="/static/bootstrap-4.0.0-dist/css/bootstrap.css" rel="stylesheet">
        <link href="/static/bootstrap-4.0.0-dist/css/login.css" rel="stylesheet">
        </head>
    <body class="text-center">
    
    <form class="form-signin">
        <h1 class="h3 mb-3 font-weight-normal">用户登录</h1>
        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="email" id="inputEmail" class="form-control" placeholder="用户名称" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" class="form-control" placeholder="用户密码" required>
        <div class="checkbox mb-3">
            <label>
            <input type="checkbox" value="remember-me">记住密码
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">登录</button>
        <p class="mt-5 mb-3 text-muted">&copy; 2017-2021</p>
    </form>


    
  </body>
</html>
